---
import Search from "../components/search/Search.tsx";
import Nav from "../components/HeaderNav/Nav.tsx";

export interface Props {
  section: string;
}

const { section } = Astro.props;
---

<div id="header">
  <div id="header-nav" class="flex items-center">
    <h3 id="title">
      Tired Gaming
      <Nav section={section} client:only />
    </h3>
  </div>
  <Search section={section} client:only />
</div>

<style>
  #header {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    padding-inline: 1rem;
    height: 2.5rem;

    margin-bottom: 3rem;
    padding-block: .5rem;

    border-bottom: 2px solid rgba(0, 0, 0, .25);
    box-shadow: 0 4px 12px rgba(0, 0, 0, .09);
  }

  h3 {
    font-size: 1.75rem;
    font-weight: 800;
    margin: 0;
    white-space: nowrap;
  }

  #title {
    display: flex;
    gap: .2rem;
    height: 100%;
  }
</style>
